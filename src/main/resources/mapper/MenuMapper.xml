<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MenuDao">
    <resultMap id="menu" type="com.king.modules.sys.menu.entity.Menu">
        <id column="id" property="id"/>
        <result column="createUserId" property="createUserId"/>
        <result column="createUserName" property="createUserName"/>
        <result column="createDate" property="createDate"/>
        <result column="updateUserId" property="updateUserId"/>
        <result column="updateUserName" property="updateUserName"/>
        <result column="updateDate" property="updateDate"/>


        <result column="parentId" property="parentId"/>
        <result column="parentIds" property="parentIds"/>
        <result column="name" property="name"/>
        <result column="href" property="href"/>
        <result column="permission" property="permission"/>
        <result column="icon" property="icon"/>
        <result column="sort" property="sort"/>
        <result column="isShow" property="isShow"/>
    </resultMap>

    <select id="selectByPrimaryKey" parameterType="String"
            resultMap="menu">
        SELECT *
        FROM sys_menu
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.king.modules.sys.menu.entity.Menu">
        INSERT INTO sys_menu (
            id, createUserId, createUserName, createDate, parentId, parentIds, name, href, permission, icon, sort, isShow
        ) VALUE (
            #{id}, #{createUserId}, #{createUserId}, #{createDate}, #{parentId}, #{parentIds}, #{name}, #{href},
                   #{permission}, #{icon}, #{sort}, #{isSho}w
        )
    </insert>

    <select id="selectAll" resultMap="menu">
        SELECT *
        FROM sys_menu
    </select>

    <select id="selectByParentId" resultMap="menu" parameterType="String">
        SELECT *
        FROM sys_menu
        <choose>
            <when test="_parameter == null">
                WHERE parentId IS NULL
            </when>
            <otherwise>
                WHERE parentId = #{parentId}
            </otherwise>
        </choose>
    </select>

    <select id="isHasChild" resultType="java.lang.Integer" parameterType="String">
        SELECT COUNT(1) AS rowCount
        FROM sys_menu
        WHERE parentId = #{id}
    </select>
</mapper>